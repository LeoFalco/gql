{
  "name": "gql",
  "version": "1.0.65",
  "main": "src/index.ts",
  "license": "MIT",
  "private": true,
  "repository": "https://github.com/LeoFalco/gql",
  "workspaces": [
    "./"
  ],
  "scripts": {
    "clean": "npx lerna clean -y",
    "start-db": "docker-compose up & npm run health-check",
    "pretest": "npm run start-db",
    "health-check": "npx dotenv -e .env.$(echo $ENVIRONMENT) -- npx ts-node bin/health-check.ts",
    "migrate": "npm run migrate-save && npm run migrate-up",
    "migrate-save": "npx dotenv -e .env.$(echo $ENVIRONMENT) -- npx prisma migrate save --experimental --name=''",
    "migrate-up": "npx dotenv -e .env.$(echo $ENVIRONMENT) -- npx prisma migrate up --experimental --verbose",
    "test": "npm run migrate && npm run jest",
    "jest": "npx dotenv -e .env.$(echo $ENVIRONMENT) -- npx jest --detectOpenHandles --forceExit",
    "posttest": "docker-compose down",
    "start": "npm run migrate && npm run start-ts-node",
    "start-ts-node": "npx dotenv -e .env.$(echo $ENVIRONMENT) -- npx ts-node .",
    "postinstall": "npx dotenv -e .env.$(echo $ENVIRONMENT) -- npx prisma generate",
    "seed": "npx dotenv -e .env.$(echo $ENVIRONMENT) -- npx ts-node bin/seed",
    "nodemon": "npx dotenv -e .env.$(echo $ENVIRONMENT) -- npx nodemon",
    "start-dev": "npm run start-db && npm run nodemon",
    "lint": "npx prettier --check ./**/**.* && npx eslint . --ext .js,.ts",
    "lint-fix": "npx prettier --write ./**/**.* && npx eslint . --ext .js,.ts --fix",
    "commit": "npx cz"
  },
  "dependencies": {
    "@prisma/cli": "2.9.0",
    "@prisma/client": "2.9.0",
    "@sentry/node": "5.27.1",
    "@sentry/tracing": "5.27.1",
    "apollo-boost": "0.4.9",
    "apollo-server": "2.18.2",
    "async": "3.2.0",
    "commitizen": "4.2.2",
    "cuid": "2.1.8",
    "dotenv": "8.2.0",
    "dotenv-cli": "4.0.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-prettier": "3.1.4",
    "graphql": "15.4.0",
    "npm": "6.14.8",
    "postinstall": "0.7.0",
    "promise-mysql": "4.1.3",
    "ts-node": "9.0.0",
    "typescript": "4.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@sentry/cli": "1.58.0",
    "@types/cross-spawn": "6.0.2",
    "@types/jest": "26.0.15",
    "@types/node": "10.14.9",
    "@types/node-fetch": "2.5.7",
    "@typescript-eslint/eslint-plugin": "4.6.0",
    "@typescript-eslint/parser": "4.6.0",
    "apollo-server-testing": "2.18.2",
    "chalk": "4.1.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.12.1",
    "eslint-config-standard": "15.0.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.2",
    "husky": "4.3.0",
    "jest": "26.6.1",
    "lerna": "3.22.1",
    "mysql": "2.18.1",
    "nodemon": "2.0.6",
    "prettier": "2.1.2",
    "rimraf": "3.0.2",
    "sucrase": "3.16.0",
    "supertest": "5.0.0",
    "ts-jest": "26.4.3",
    "tslint": "6.1.3"
  },
  "engines": {
    "node": ">=13.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
